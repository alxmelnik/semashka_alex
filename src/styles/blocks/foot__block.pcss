.foot__list {
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  font-size: 16px;
}

.foot__item {
  // margin-right: 60px;
  white-space: nowrap;
  
  padding: 0 20px;

  &:last-child {
    margin-right: 0px;
    border-right: none;
  }

}

.foot__link {
  font-size: 16px;
  font-weight: 400;
  line-height: 1.88;
}

.foot__link:hover {
 color: $white; 
 transition: 0.3s;
}

